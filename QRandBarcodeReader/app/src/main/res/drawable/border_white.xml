<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- item① -->
    <item>
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">
            <!-- item②に対して2dp内側に入る。 -->
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <!-- 色:パープル -->
            <gradient
                android:startColor="#178BCD"
                android:centerColor="#690095"
                android:endColor="#1900E5"
                android:angle="270" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- item③ -->
    <item>
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">
            <!-- 色:パープル -->
            <solid android:color="@color/white" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>